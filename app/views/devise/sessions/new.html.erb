<h2>Iniciar sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Correo" , class: "label-dark", style: "display: block" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Clave" , class: "label-dark", style: "display: block" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %> <br>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordar" , class: "label-dark", style: "display: block" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar sesión" , class: "btn btn-warning"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
